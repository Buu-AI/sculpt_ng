{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "build/",
        "dist/",
        "node_modules"
    ],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "isolatedModules": true,
        "lib": [
            "es2023",
            "dom"
        ],
        "noEmit": true,
        "noImplicitOverride": true,
        "noImplicitThis": true,
    }
}